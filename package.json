{
  "name": "microservices-app",
  "version": "1.0.0",
  "description": "Monolithic application with microservices",
  "scripts": {
    "start:products": "node products-service/index.js",
    "start:users": "node users-service/index.js",
    "start:orders": "node orders-service/index.js",
    "start:gateway": "node gateway-server/index.js",
    "start": "concurrently \"npm run start:products\" \"npm run start:users\" \"npm run start:orders\" \"npm run start:gateway\""
  },
  "dependencies": {
    "concurrently": "^7.0.0",
    "express": "^4.17.1",
    "mongoose": "^6.0.12",
    "axios": "^0.24.0"
  }
}
